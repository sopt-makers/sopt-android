<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/generation_1"
        style="@style/TextAppearance.SOPT.CaptionLarge"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/oval"
        android:backgroundTint="@color/black_40"
        android:gravity="center"
        android:textColor="@color/white_100"
        tools:text="31" />

    <TextView
        android:id="@+id/generation_2"
        style="@style/TextAppearance.SOPT.CaptionLarge"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/oval"
        android:backgroundTint="@color/black_40_70"
        android:gravity="center"
        android:textColor="@color/white_100_70"
        tools:text="30" />

    <TextView
        android:id="@+id/generation_3"
        style="@style/TextAppearance.SOPT.CaptionLarge"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/oval"
        android:backgroundTint="@color/black_40_50"
        android:gravity="center"
        android:textColor="@color/white_100_50"
        tools:text="29" />

    <TextView
        android:id="@+id/generation_4"
        style="@style/TextAppearance.SOPT.CaptionLarge"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/oval"
        android:backgroundTint="@color/black_40_30"
        android:gravity="center"
        android:textColor="@color/white_100_30"
        tools:text="28" />

    <TextView
        android:id="@+id/generation_5"
        style="@style/TextAppearance.SOPT.CaptionLarge"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/oval"
        android:backgroundTint="@color/black_40_20"
        android:gravity="center"
        android:textColor="@color/white_100_20"
        tools:text="31" />

    <TextView
        android:id="@+id/generation_addition"
        style="@style/TextAppearance.SOPT.CaptionLarge"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/oval"
        android:backgroundTint="@color/black_80"
        android:gravity="center"
        android:textColor="@color/white_100"
        tools:text="+1" />
</LinearLayout>