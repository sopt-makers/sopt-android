<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.SOPT" parent="">
        <item name="android:fontFamily">@font/sopt_font</item>
        <item name="fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.SOPT.DisplayLarge">
        <item name="fontWeight">700</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30sp</item>
    </style>

    <style name="TextAppearance.SOPT.DisplayMedium">
        <item name="fontWeight">500</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30sp</item>
    </style>

    <style name="TextAppearance.SOPT.HeadLineLarge">
        <item name="fontWeight">700</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">25sp</item>
    </style>

    <style name="TextAppearance.SOPT.HeadLineMedium">
        <item name="fontWeight">700</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.SOPT.Body">
        <item name="fontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.SOPT.CaptionLarge">
        <item name="fontWeight">500</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15sp</item>
    </style>

    <style name="TextAppearance.SOPT.CaptionMedium">
        <item name="fontWeight">500</item>
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">15sp</item>
    </style>
</resources>