<resources>
    <!-- Base application theme. -->
    <style name="Theme.SOPT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorPrimaryVariant">@color/purple_40</item>
        <item name="colorOnPrimary">@color/real_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_dim_100</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white_100</item>
        <!-- Neutral Key Color -->
        <item name="android:colorBackground">@color/black_100</item>
        <item name="colorOnBackground">@color/white_100</item>
        <item name="colorSurface">@color/black_60</item>
        <item name="colorOnSurface">@color/white_100</item>
        <item name="colorSurfaceVariant">@color/black_40</item>
        <item name="colorOnSurfaceInverse">@color/gray_60</item>
        <item name="colorOnSurfaceVariant">@color/gray_20</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <!-- Font Theme -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.SOPT.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.SOPT.DisplayMedium</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.SOPT.HeadLineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.SOPT.HeadLineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.SOPT.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.SOPT.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.SOPT.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.SOPT.CaptionLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.SOPT.CaptionMedium</item>
    </style>

    <!--  AlertDialog  -->
</resources>