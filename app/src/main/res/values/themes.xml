<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOPT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Neutral Key Color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/gray_900</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <!-- Font Theme -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.SOPT.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.SOPT.DisplayMedium</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.SOPT.HeadLineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.SOPT.HeadLineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.SOPT.Body</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.SOPT.CaptionLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.SOPT.CaptionMedium</item>
    </style>

    <style name="Theme.SOPT.Spalsh" type="Theme.SOPT">
        <item name="android:windowBackground">@color/gray_900</item>
        <item name="android:statusBarColor">@color/gray_900</item>
    </style>
</resources>